<Window x:Class="Calculator1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400" MinWidth="400" MinHeight="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textBlock" Grid.Column="0" HorizontalAlignment="Left" TextWrapping="Wrap" Text=""  VerticalAlignment="Center" Height="150" Grid.ColumnSpan="4" Width="400" FontSize="50" />
        <Button Grid.Column="0" Grid.Row="1" Content="7" Click="Button7Click" FontSize="50"  />
        <Button Grid.Column="0" Grid.Row="2" Content="4" Click="Button4Click" FontSize="50"  />
        <Button Grid.Column="0" Grid.Row="3" Content="1" Click="Button1Click" FontSize="50"  />
        <Button Grid.Column="0" Grid.Row="4" Content="0" Click="Button0Click" FontSize="50"  />
        <Button Grid.Column="1" Grid.Row="1" Content="8" Click="Button8Click" FontSize="50"  />
        <Button Grid.Column="1" Grid.Row="2" Content="5" Click="Button5Click" FontSize="50"  />
        <Button Grid.Column="1" Grid.Row="3" Content="2" Click="Button2Click" FontSize="50"  />
        <Button Grid.Column="1" Grid.Row="4" Content="=" Click="ButtonEqualClick" FontSize="50"  />
        <Button Grid.Column="2" Grid.Row="1" Content="9" Click="Button9Click" FontSize="50"  />
        <Button Grid.Column="2" Grid.Row="2" Content="6" Click="Button6Click" FontSize="50"  />
        <Button Grid.Column="2" Grid.Row="3" Content="3" Click="Button3Click" FontSize="50"  />
        <Button Grid.Column="2" Grid.Row="4" Content="+" Click="ButtonPlusClick" FontSize="50"  />
        <Button Grid.Column="3" Grid.Row="1" Content="C" Click="ButtonCClick" FontSize="50"  />
        <Button Grid.Column="3" Grid.Row="2" Content="/" Click="ButtonDivClick" FontSize="50"  />
        <Button Grid.Column="3" Grid.Row="3" Content="*" Click="ButtonMultiplyClick" FontSize="50"  />
        <Button Grid.Column="3" Grid.Row="4" Content="-" Click="ButtonMinusClick" FontSize="50"  />
    </Grid>
</Window>
